# Use official Node.js image
FROM node:18

# Create app directory
WORKDIR /usr/src/app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the app
COPY . .

# Expose port (required by Koyeb even if you donâ€™t use it)
EXPOSE 3000

# Start the bot
CMD [ "npm", "start" ]
